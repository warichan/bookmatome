<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= (@user.errors.count) %> 個のエラーがあります</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><div class= "error"><%= message %></div></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "メールアドレス" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "パスワード(4文字以上)" %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label "確認のためもう一度" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <% if current_user %>
  <div class="explanation_text">
    ★変更する項目のみ入力してください
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>
